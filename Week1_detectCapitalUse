class Solution(object):
    def detectCapitalUse(self, word):
        """
        :type word: str
        :rtype: bool
        """
        '''
        if word.isupper():
            return True
        elif word.islower():
            return True
        elif word.istitle():
            return True
        else:
            return False
        '''
        #(ord(c)<= 90) and (ord(c)>= 65)
        
        return (word.isupper() or word.islower() or word.istitle())
        
 
